<!DOCTYPE html>
<html>
	<head>
  	<title><%= title %></title>
  	<%= render 'shared/stylesheets' %>
  	<%= javascript_include_tag :defaults %>
  	<%= csrf_meta_tag %>
	</head>
	<body>
		<%= render 'shared/header' %>
		<% flash.each do |key, value| %>
				<div id="flash" class="no-pull"><%= raw(value) %></div>
			<% end %>
		<div id="main">
			<%= yield %>
			<!-- <%= render 'shared/sidebar' %> -->
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
