<div class="left">
	<h1>All Users</h1>
	<ul id="users-list">
		<% @users.each do |user| %>
			<li>
				<div class="user">
					<table>
						<tr>
							<td>
								<%= link_to user.get_name, user_path(user) %>
							</td>
							<td>
								<%= '(' + user.username + ')' %>
							</td>
							<% if current_user.admin? %>
								<td>
									| <%= link_to 'Edit', edit_user_path(user) %>
								</td>
							<% end %>
						</tr>
						<tr>
							<td>
								<span class="grey"><%= user.get_access_level_name %></span>
							</td>
						</tr>
					</table>
				</div>
			</li>
		<% end %>
	</ul>
</div>